func _on_World_changed_level(selected_level):
	
	for child in get_children():
		child.queue_free()
		remove_child(child)
	
	for chunk_id in range(selected_level.get_node(\"TilePlanes/FG\").get_chunk_count()):
		var ui_chunk := UIChunk.new(selected_level.get_node(\"TilePlanes/FG\").get_chunk_size())
		add_child(ui_chunk)
		selected_level.get_node(\"TilePlanes/FG\").link_tilemap(ui_chunk.tilemap)
		selected_level.get_node(\"TilePlanes/FG\").set_chunk(0,0,chunk_id,ui_chunk.tilemap)
"

